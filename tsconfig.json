{
  "compilerOptions": {
    "lib": ["dom", "es2015.core", "es2015.promise", "es2015.iterable", "es5"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./",
    "removeComments": false,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "paths": {}
  },
  "atom": {
    "rewriteTsconfig": false
  },
  "exclude": ["node_modules", "types/**/*.ts", "test/**/*.ts"],
  "compileOnSave": false,
  "buildOnSave": false
}
