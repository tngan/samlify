{
  "name": "samlify-js",
  "version": "2.7.9",
  "description": "High-level API for Single Sign On (SAML 2.0)",
  "main": "./build/index.js",
  "keywords": [
    "nodejs",
    "saml2",
    "sso",
    "slo",
    "metadata"
  ],
  "scripts": {
    "build": "yarn audit;make rebuild",
    "docs": "docsify serve -o docs",
    "lint": "tslint -p .",
    "lint:fix": "tslint -p . --fix",
    "pretest": "make pretest",
    "test": "NODE_ENV=test nyc ava",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "hooks:postinstall": "ln -sf $PWD/.pre-commit.sh $PWD/.git/hooks/pre-commit",
    "prettier": "prettier --write ."
  },
  "contributors": [
    "Tony Ngan <tonynwk919@gmail.com>",
    "Mohamed Meabed <meabed@me.io>"
  ],
  "repository": {
    "url": "https://github.com/meabed/samlify-js",
    "type": "git"
  },
  "license": "MIT",
  "dependencies": {
    "camelcase": "^6.0.0",
    "node-forge": "^0.9.1",
    "node-rsa": "^1.0.8",
    "pako": "^1.0.11",
    "uuid": "^8.2.0",
    "xml": "^1.0.1",
    "xml-crypto": "^1.5.3",
    "xml-encryption": "^1.2.0",
    "xmldom": "^0.3.0",
    "xpath": "^0.0.27"
  },
  "devDependencies": {
    "@authenio/samlify-xsd-schema-validator": "^1.0.3",
    "@ava/typescript": "^1.1.1",
    "@types/node": "^14.0.23",
    "@types/node-forge": "^0.9.4",
    "@types/node-rsa": "^1.0.0",
    "@types/pako": "^1.0.1",
    "@types/uuid": "8.0.0",
    "@types/xml": "^1.0.5",
    "@types/xml-crypto": "^1.4.1",
    "@types/xmldom": "^0.1.30",
    "ava": "^3.10.1",
    "coveralls": "^3.1.0",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "timekeeper": "^2.2.0",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.7"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "!**/*.d.ts"
    ]
  }
}
